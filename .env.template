# CFE Solutions Environment Configuration Template
# Copy this file to .env and fill in the actual values

# Required Environment Variables
CLIO_CLIENT_ID=your_clio_client_id_here
CLIO_CLIENT_SECRET=your_clio_client_secret_here
NEO4J_PASSWORD=your_neo4j_password_here
CFE_AUTH_TOKEN=your_cfe_auth_token_here

# Optional Environment Variables (will use defaults if not set)
CFE_REGISTRY_URL=http://cfe-registry:8080
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
REDIS_URL=redis://redis:6379

# Additional Configuration
DASH_DEBUG=false
DASH_HOST=0.0.0.0
DASH_PORT=8052

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=3600

# Database Configuration
ANALYTICS_DB_PATH=/data/analytics/clio-analytics.db

# Service Discovery
SERVICE_NAME=dashboard_analytics
SERVICE_VERSION=1.0.0
HEALTH_CHECK_INTERVAL=30s

# Monitoring
METRICS_ENABLED=true
LOG_LEVEL=INFO

# Security
AUTH_ENABLED=true
CORS_ORIGINS=*

# Feature Flags
NETWORK_VISUALIZATION_ENABLED=true
REAL_TIME_UPDATES_ENABLED=true
ADVANCED_ANALYTICS_ENABLED=true